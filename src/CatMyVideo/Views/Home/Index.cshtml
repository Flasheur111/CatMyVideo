@using Engine.Dbo
@{
  ViewBag.Title = "Home";
  var MostViewed = ViewData["MostViewed"] as Engine.Dbo.Video;
  var Videos = ViewData["Recommanded"] as List<Engine.Dbo.Video>;
  var Formats = ViewData["Format"] as string;
}
<div class="row">
  <div class="large-12 columns">
    <h2>Featured</h2>

    <div class="row">
      <div class="large-8 columns">
        <div class="flex-video">
          <video width="480" height="320" controls autoplay="autoplay" preload="auto">
            <source src="/api/VideoApi/3" type="video/mp4">
          </video>
        </div>
      </div>

      <div class="large-4 columns">
        <h3>@MostViewed.Title</h3>
        <small>By <a href="#">Bleed Air</a></small>
        <p class="home-featured-description">
          @MostViewed.Description
        </p>
      </div>
    </div>
    <h2>Latest videos</h2>
    <div class="row">
      @foreach (var Video in Videos)
      {
        <div class="large-3 columns">
            <div>
                <a href="@Url.Action("Display", "Video", new { id = @Video.Id })">
                    <img src="@Url.Action("GetImage", "api/VideoAPI", new { id = @Video.Id })" alt="@Video.Title" />
                </a>
            </div>
            <h5>@Video.Title <small>By <a href="#">VimeoStaff</a></small></h5>
        </div>
      }
    </div>
  </div>
</div>
